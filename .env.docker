# Bot token from @BotFather
BOT_TOKEN=your_bot_token_here
ALLOWED_CHAT_IDS=123456789,987654321

# Database configuration
# For PostgreSQL (default)
DATABASE_URL=postgresql://postgres:postgres@db:5432/expenses
DB_IMAGE=postgres:16-alpine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=expenses

# For MariaDB (uncomment to use)
# DATABASE_URL=mysql+mysqldb://root:mariadb@db:3306/expenses
# DB_IMAGE=mariadb:11
# MYSQL_ROOT_PASSWORD=mariadb
# MYSQL_DATABASE=expenses

# For SQLite (uncomment to use)
# DATABASE_URL=sqlite:///expenses.db
# Comment out DB_IMAGE to disable the database service when using SQLite
