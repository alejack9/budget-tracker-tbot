{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bot (module)",
            "type": "debugpy",
            "request": "launch",
            "module": "expanses_tracker.api.main",
            "cwd": "${workspaceFolder}/bot",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Bot (file with PYTHONPATH)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bot/expanses_tracker/api/main.py",
            "cwd": "${workspaceFolder}/bot",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bot"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}